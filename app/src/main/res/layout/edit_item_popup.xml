<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/LinearLayoutEditItem"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:minWidth="280dip"
              android:orientation="vertical"
              android:layout_gravity="center_horizontal"
              android:background="@color/white"
              android:padding="0dip"
              android:layout_marginLeft="0dip"
              android:layout_marginRight="0dip">

    <ScrollView
            android:id="@+id/EditItemDish"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/TextEditItemDishName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:paddingTop="10dip"
                    android:paddingBottom="10dip"
                    android:paddingLeft="4dip"
                    android:paddingRight="4dip"></TextView>
            <!--  Dish layout AUTO GENERATED -->
            <LinearLayout
                    android:id="@+id/llEditItemMain"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llEditItemOptions"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llEditItemExtras"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:orientation="vertical">
            </LinearLayout>

            <TextView
                    android:id="@+id/TextEditQtyName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:paddingTop="4dip"
                    android:paddingBottom="4dip"
                    android:paddingLeft="4dip"
                    android:paddingRight="4dip"></TextView>

            <RadioGroup
                    android:id="@+id/GroupQTY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal"
                    android:visibility="visible">

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="64px"
                        android:id="@+id/but_qty1"
                        android:paddingRight="10sp"
                        android:button="@drawable/resize_button"
                        android:textColor="@color/grey333"
                        android:text="1"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="64px"
                        android:id="@+id/but_qty2"
                        android:paddingRight="10sp"
                        android:button="@drawable/resize_button"
                        android:textColor="@color/grey333"
                        android:text="2"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="64px"
                        android:id="@+id/but_qty3"
                        android:paddingRight="10sp"
                        android:button="@drawable/resize_button"
                        android:textColor="@color/grey333"
                        android:text="3"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="64px"
                        android:id="@+id/but_qty4"
                        android:paddingRight="10sp"
                        android:button="@drawable/resize_button"
                        android:textColor="@color/grey333"
                        android:text="4"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="64px"
                        android:id="@+id/but_qty5"
                        android:paddingRight="10sp"
                        android:button="@drawable/resize_button"
                        android:textColor="@color/grey333"
                        android:text="5"/>
            </RadioGroup>

            <Button
                    android:id="@+id/update_but"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="UPDATE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:lines="1"
                    android:textColor="@color/grey222"
                    android:layout_marginTop="20dip"
                    android:layout_marginBottom="20dip"
                    android:visibility="visible"></Button>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
