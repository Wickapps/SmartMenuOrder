<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/LinearLayout01"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:minWidth="180dip"
              android:orientation="vertical"
              android:layout_gravity="center_horizontal"
              android:background="@color/white"
              android:padding="0dip"
              android:layout_marginLeft="0dip"
              android:layout_marginRight="0dip">

    <RadioGroup
            android:id="@+id/GroupQTY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dip"
            android:orientation="vertical"
            android:visibility="visible">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/but_qty1"
                android:button="@drawable/resize_button"
                android:textColor="@color/grey333"
                android:text="1"/>

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/but_qty2"
                android:button="@drawable/resize_button"
                android:textColor="@color/grey333"
                android:text="2"/>

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/but_qty3"
                android:button="@drawable/resize_button"
                android:textColor="@color/grey333"
                android:text="3"/>

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/but_qty4"
                android:button="@drawable/resize_button"
                android:textColor="@color/grey333"
                android:text="4"/>

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/but_qty5"
                android:button="@drawable/resize_button"
                android:textColor="@color/grey333"
                android:text="5"/>
    </RadioGroup>

    <Button
            android:id="@+id/update_but"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Update"
            android:textSize="16sp"
            android:textStyle="bold"
            android:lines="1"
            android:textColor="@color/rgbfff"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="20dip"
            android:visibility="visible"></Button>
</LinearLayout>