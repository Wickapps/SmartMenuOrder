<?xml version="1.0" encoding="utf-8"?>
<selector
        xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                    android:startColor="@color/graywhite"
                    android:endColor="@color/graywhite"
                    android:angle="90"/>
            <stroke
                    android:width="1dp"
                    android:color="@color/black444"/>
            <corners
                    android:radius="4dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                    android:endColor="@color/light_grey"
                    android:startColor="@color/light_grey"
                    android:angle="90"/>
            <stroke
                    android:width="1dp"
                    android:color="@color/black444"/>
            <corners
                    android:radius="4dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                    android:startColor="@color/light_grey"
                    android:centerColor="@color/graywhite"
                    android:endColor="@color/dark_grey"
                    android:type="linear"
                    android:centerX="0.9"
                    android:angle="270"/>
            <stroke
                    android:width="1dp"
                    android:color="@color/black444"/>
            <corners
                    android:radius="4dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>


</selector>
